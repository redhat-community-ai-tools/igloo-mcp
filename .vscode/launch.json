    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run Igloo MCP Server (HTTP)",
            "type": "debugpy",
            "request": "launch",
            "module": "igloo_mcp.main",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "IGLOO_MCP_TRANSPORT": "streamable-http"
            }
        },
        {
            "name": "Python Debugger: Run Igloo MCP Server (stdio)",
            "type": "debugpy",
            "request": "launch",
            "module": "igloo_mcp.main",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "IGLOO_MCP_TRANSPORT": "stdio"
            }
        },
        {
            "name": "Python Debugger: Run Test Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_client.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: Run Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}